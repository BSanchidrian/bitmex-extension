{
  "manifest_version": 2,
  "name": "bitmex-extension",
  "version": "1.0",
  "author": "Borja Sanchidri√°n",
  "description": "Bitmex extension",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.bitmex.com/app/trade/*"],
      "js": [
        "js/Utils.js",
        "js/libs/jquery-3.2.1.min.js",
        "js/libs/jquery-ui.min.js",
        "js/exchange/BitmexClient.js",
        "js/TabWindow.js",
        "js/Window.js",
        "js/windows/RecentTradesWindow.js",
        "js/Index.js"
      ],
      "css": ["css/libs/jquery-ui.css", "css/style.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "js/libs/jquery-3.2.1.min.js",
    "js/injectables/Test.js"
  ],
  "page_action": { "default_popup": "html/settings.html" },
  "permissions": ["declarativeContent", "storage"]
}
